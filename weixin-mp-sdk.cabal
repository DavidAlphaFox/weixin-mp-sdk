name:                weixin-mp-sdk
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             MIT
license-file:        LICENSE
author:              Gilbert Fine
maintainer:          gilbert.fine@gmail.com
-- copyright:           
category:            WeiXin
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     WeiXin.PublicPlatform.Error
                       WeiXin.PublicPlatform.Types
                       WeiXin.PublicPlatform.WS
                       WeiXin.PublicPlatform.Acid
                       WeiXin.PublicPlatform.Security
                       WeiXin.PublicPlatform.Message
                       WeiXin.PublicPlatform.Menu
                       WeiXin.PublicPlatform.EndUser
                       WeiXin.PublicPlatform.Yesod.Site
                       WeiXin.PublicPlatform.Yesod.Site.Data
                       WeiXin.PublicPlatform.BgWork

  -- other-modules:       
  default-extensions:  NoImplicitPrelude
                       DeriveDataTypeable
                       OverloadedStrings
                       QuasiQuotes
                       TemplateHaskell
                       TypeFamilies
                       FlexibleInstances
                       MultiParamTypeClasses
                       ExistentialQuantification


  build-depends:       base >=4.7 && <4.8
                     , classy-prelude
                     , yesod
                     , yesod-core
                     , yesod-helpers >= 0.7.3
                     , text
                     , aeson
                     , bytestring
                     , cryptohash
                     , base64-bytestring
                     , base16-bytestring
                     , wreq
                     , lens
                     , exceptions
                     , http-client
                     , monad-logger
                     , safecopy
                     , acid-state
                     , data-default
                     , mtl
                     , async
                     , time
                     , cryptocipher
                     , cipher-aes
                     , byteable
                     , random
                     , attoparsec
                     , transformers
                     , transformers-compat
                     , xml-conduit
                     , xml-hamlet
                     , wai
                     , conduit
                     , scientific


  -- hs-source-dirs:      
  default-language:    Haskell2010

  ghc-options:         -Wall


test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             test.hs
  ghc-options:         -Wall
  build-depends:       base
                     , weixin-mp-sdk
                     , classy-prelude
                     , bytestring
                     , cryptocipher
                     , base64-bytestring
                     , data-default
                     , xml-conduit
                     , text

  default-language:    Haskell2010

  default-extensions:  NoImplicitPrelude
                       DeriveDataTypeable
                       OverloadedStrings
                       QuasiQuotes
                       TemplateHaskell
                       TypeFamilies
                       FlexibleInstances
                       MultiParamTypeClasses
