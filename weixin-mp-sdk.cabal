category:            WeiXin
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     WeiXin.PublicPlatform.Error
                       WeiXin.PublicPlatform.Types
                       WeiXin.PublicPlatform.WS
                       WeiXin.PublicPlatform.Acid
                       WeiXin.PublicPlatform.Security
                       WeiXin.PublicPlatform.Yesod.Site
                       WeiXin.PublicPlatform.Yesod.Site.Data
                       WeiXin.PublicPlatform.BgWork

  -- other-modules:       
  default-extensions:  NoImplicitPrelude
                       DeriveDataTypeable
                       OverloadedStrings
                       QuasiQuotes
                       TemplateHaskell
                       TypeFamilies
                       FlexibleInstances
                       MultiParamTypeClasses


  build-depends:       base >=4.7 && <4.8
                     , classy-prelude
                     , yesod
                     , yesod-helpers >= 0.7.2
                     , text
                     , aeson
                     , bytestring
                     , cryptohash
                     , base64-bytestring
                     , base16-bytestring
                     , wreq
                     , lens
                     , exceptions
                     , http-client
                     , monad-logger
                     , safecopy
                     , acid-state
                     , data-default
                     , mtl
                     , async
                     , time


  -- hs-source-dirs:      
  default-language:    Haskell2010

  ghc-options:         -Wall

